@model IA.ViewModels.ProjectUsersViewModel

@{
    ViewBag.Title = "AddMember";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12 p-r-0 title-margin-right"></div>
                <!-- /# column -->
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 p-l-0 title-margin-left">
                    <div class="page-header page_header_2">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                <li class="breadcrumb-item active">Add Member</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Add Member</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                @using (Html.BeginForm("AddMember", "MarketingDirector"))
                                {
                                    @Html.Hidden("ProjectId", Model.Project.ProjectId)
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <select name="TeamMemberId">
                                                    @foreach (var item in Model.Users)
                                                    {

                                                        <option value="@item.UserId">
                                                            @item.GetUserName() (@item.Role.RoleName)
                                                        </option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                @Html.ActionLink("Back", "MarketingDirectorProfile", "MarketingDirector", null, new { @class = "btn" })
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

