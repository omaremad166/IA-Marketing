@model IEnumerable<IA.Models.Project>

@{
    ViewBag.Title = "ListProjects";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Hello, @Session["UserName"]</h1>
                        </div>
                    </div>
                </div>

                <!-- /# column -->
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 p-l-0 title-margin-left">
                    <div class="page-header page_header_2">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                <li class="breadcrumb-item active">List Projects</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>

        </div>
        <!-- /# row -->
        <section id="main-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Users</h4>
                        </div>
                        <div class="bootstrap-data-table-panel table_22">
                            <div class="table-responsive">
                                <table id="row-select" class="display table table-borderd table-hover forminline_22">
                                    <thead>
                                        <tr>
                                            <th>Project Name</th>
                                            <th>Price</th>
                                            <th>Description</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>State</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var project in Model)
                                        {
                                            <tr>
                                                <td>@project.ProjectName</td>
                                                <td>@project.Price</td>
                                                <td>@project.Description</td>
                                                <td>@project.StartDate</td>
                                                <td>@project.EndDate</td>
                                                <td>
                                                    @if (@project.ProjectState.ProjectStateId == 4)
                                                    {
                                                        <span class="badge badge-success">@project.ProjectState.State</span>
                                                    }
                                                    else if (@project.ProjectState.ProjectStateId == 2)
                                                    {
                                                        <span class="badge badge-primary">@project.ProjectState.State</span>
                                                    }
                                                    else if (@project.ProjectState.ProjectStateId == 1)
                                                    {
                                                        <span class="badge badge-warning">@project.ProjectState.State</span>
                                                    }
                                                </td>
                                                <td>@Html.ActionLink("Delete", "DeleteProject", new { ProjectId = project.ProjectId }, new { @class = "btn btn-danger" })</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

