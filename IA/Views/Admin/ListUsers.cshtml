@model IEnumerable<IA.Models.User>
@{
    ViewBag.Title = "ListUsers";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Hello, @Session["UserName"]</h1>
                        </div>
                    </div>
                </div>

                <!-- /# column -->
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 p-l-0 title-margin-left">
                    <div class="page-header page_header_2">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                <li class="breadcrumb-item active">List Users</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>

                </div>
                <!-- /# row -->
                <section id="main-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-title">
                                    <h4>Users</h4>
                                </div>
                                @Html.ActionLink("Add User", "AddUser", null, new { @class = "btn btn-primary"})
                                <div class="bootstrap-data-table-panel table_22">
                                    <div class="table-responsive">
                                        <table id="row-select" class="display table table-borderd table-hover forminline_22">
                                            <thead>
                                                <tr>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>E-mail</th>
                                                    <th>Role</th>
                                                    <th>Phone Number</th>
                                                    <th>Description</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var user in Model)
                                                {
                                                    <tr>
                                                        <td>@user.FirstName</td>
                                                        <td>@user.LastName</td>
                                                        <td>@user.Email</td>
                                                        <td>@user.Role.RoleName</td>
                                                        <td>@user.PhoneNo</td>
                                                        <td>@user.Description</td>
                                                        <td>@Html.ActionLink("Delete", "DeleteUser", new { UserId = user.UserId }, new { @class = "btn btn-danger" })</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

