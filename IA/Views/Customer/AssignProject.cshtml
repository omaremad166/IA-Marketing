@model IA.ViewModels.ProjectUsersViewModel
@{
    ViewBag.Title = "Assign Project";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12 p-r-0 title-margin-right"></div>
                <!-- /# column -->
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 p-l-0 title-margin-left">
                    <div class="page-header page_header_2">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                <li class="breadcrumb-item active">Assign</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-title">
                            <h4>Create Project</h4>
                        </div>
                        <div class="card-body">
                            <div class="basic-elements">
                                @using (Html.BeginForm("AssignProject", "Customer"))
                                {
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <select name="DirectorId"  >
                                                    @foreach (var item in Model.Users)
                                                    {

                                                        <option value="@item.UserId">
                                                            @item.GetUserName()
                                                        </option>
                                                    }
                                                </select>
X                                                <input hidden value="@this.ViewContext.RouteData.Values["id"]" name="ProjectId" />
                                            </div>
                                         
                                            <div class="form-group">
                                                @Html.ActionLink("Back", "CustomerProfile", "Customer", null, new { @class = "btn" })
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
